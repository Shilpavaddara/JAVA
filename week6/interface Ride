        return farePerKm * distance;
    }
    
    @Override
    public String getRideType() {
        return "Mini";
    }
}

// Prime ride type
class Prime implements Ride {
    private final double farePerKm = 15.0; // Fare per km for Prime ride
    
    @Override
    public double calculateFare(double distance) {
        return farePerKm * distance;
    }
    
    @Override
    public String getRideType() {
        return "Prime";
    }
