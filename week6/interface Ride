// SUV ride type
class SUV implements Ride {
    private final double farePerKm = 25.0; // Fare per km for SUV ride
    
    @Override
    public double calculateFare(double distance) {
        return farePerKm * distance;
    }
    
    @Override
    public String getRideType() {
        return "SUV";
    }
}

class RideSharingApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Get user input for ride type
        System.out.println("Welcome to the Ride Sharing App!");
        System.out.println("Please select your ride type:");
        System.out.println("1. Mini");
        System.out.println("2. Prime");
        System.out.println("3. SUV");
        System.out.print("Enter your choice (1/2/3): ");
        int choice = scanner.nextInt();
        
        // Get user input for distance
        System.out.print("Enter the distance for your ride (in km): ");
        double distance = scanner.nextDouble();
        
        // Create the appropriate ride object based on user choice
        Ride ride = null;
        switch (choice) {
            case 1:
                ride = new Mini();
                break;
            case 2:
                ride = new Prime();
                break;
            case 3:
                ride = new SUV();
                break;
            default:
                System.out.println("Invalid choice! Please try again.");
                System.exit(0);
        }
        
        // Calculate the fare and display the result
        double fare = ride.calculateFare(distance);
        System.out.println("You selected the " + ride.getRideType() + " ride.");
        System.out.println("The fare for " + distance + " km is: Rs. " + fare);
        
        scanner.close();
    }
}

    

