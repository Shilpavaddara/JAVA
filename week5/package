package CIE;

public class Personal {
    // Personal details of a student
    protected String usn;
    protected String name;
    protected int sem;

    // Constructor to initialize the personal details
    public Personal(String usn, String name, int sem) {
        this.usn = usn;
        this.name = name;
        this.sem = sem;
    }

    // Getter methods for personal details
    public String getUsn() {
        return usn;
    }

    public String getName() {
        return name;
    }

    public int getSem() {
        return sem;
    }
}
package CIE;

public class Internals {
    // Array to store internal marks for 5 courses
    protected int[] internalMarks = new int[5];

    // Constructor to initialize internal marks
    public Internals(int[] marks) {
        if (marks.length == 5) {
            this.internalMarks = marks;
        } else {
            System.out.println("Error: Marks array should have exactly 5 elements.");
        }
    }

    // Method to get internal marks
    public int[] getInternalMarks() {
        return internalMarks;
    }

    // Method to calculate internal marks sum
    public int getInternalTotal() {
        int total = 0;
        for (int mark : internalMarks) {
            total += mark;
        }
        return total;
    }
}
package SEE;

import CIE.Personal;
import CIE.Internals;

public class External extends Personal {
    // Array to store external marks for 5 courses
    private int[] externalMarks = new int[5];

    // Constructor to initialize external marks and personal details
    public External(String usn, String name, int sem, int[] externalMarks) {
        super(usn, name, sem);  // Calling the parent class constructor
        if (externalMarks.length == 5) {
            this.externalMarks = externalMarks;
        } else {
            System.out.println("Error: Marks array should have exactly 5 elements.");
        }
    }

    // Method to get external marks
    public int[] getExternalMarks() {
        return externalMarks;
    }

    // Method to calculate external marks sum
    public int getExternalTotal() {
        int total = 0;
        for (int mark : externalMarks) {
            total += mark;
        }
        return total;
    }

    // Method to calculate final marks (internal + external)
    public int getFinalMarks(Internals internals) {
        return internals.getInternalTotal() + getExternalTotal();
    }
}
import CIE.Internals;
import SEE.External;

public class Main {

    public static void main(String[] args) {
        // Example: Data for 3 students
        // Student 1
        int[] internalMarks1 = {18, 20, 19, 17, 20};
        int[] externalMarks1 = {40, 45, 50, 42, 44};
        
        // Creating Internals object for student 1
        Internals internals1 = new Internals(internalMarks1);
        
        // Creating External object (derived from Personal) for student 1
        External student1 = new External("1BM21CS001", "John Doe", 5, externalMarks1);
        
        // Student 2
        int[] internalMarks2 = {15, 18, 19, 16, 17};
        int[] externalMarks2 = {38, 42, 45, 41, 40};
        
        // Creating Internals object for student 2
        Internals internals2 = new Internals(internalMarks2);
        
        // Creating External object for student 2
        External student2 = new External("1BM21CS002", "Jane Smith", 5, externalMarks2);

        // Student 3
        int[] internalMarks3 = {20, 19, 18, 19, 20};
        int[] externalMarks3 = {50, 48, 45, 47, 50};
        
        // Creating Internals object for student 3
        Internals internals3 = new Internals(internalMarks3);
        
        // Creating External object for student 3
        External student3 = new External("1BM21CS003", "Alice Brown", 5, externalMarks3);

        // Displaying results for all students
        System.out.println("Final marks of all students:");

        printStudentResults(student1, internals1);
        printStudentResults(student2, internals2);
        printStudentResults(student3, internals3);
    }

    // Helper method to print student results
    public static void printStudentResults(External student, Internals internals) {
        System.out.println("USN: " + student.getUsn());
        System.out.println("Name: " + student.getName());
        System.out.println("Semester: " + student.getSem());

        System.out.println("\nInternal Marks: ");
        int[] internalMarks = internals.getInternalMarks();
        for (int mark : internalMarks) {
            System.out.print(mark + " ");
        }

        System.out.println("\nExternal Marks: ");
        int[] externalMarks = student.getExternalMarks();
        for (int mark : externalMarks) {
            System.out.print(mark + " ");
        }

        System.out.println("\nFinal Marks (Internal + External): " + student.getFinalMarks(internals));
        System.out.println("-----------------------------------");
    }
}
